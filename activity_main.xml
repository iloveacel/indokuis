<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/Background_Yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:padding="9dp"
        android:background="@color/Header_Yellow">

        <ImageView
            android:id="@+id/img_logo"
            android:src="@drawable/logo_dobos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SD KATOLIK FRATER             DON BOSCO MANADO"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IndoKuis"
            android:textSize="50sp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/button_bg"
            android:hint="Nama"
            android:textColor="@color/black"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/button_bg"
            android:hint="Username"
            android:textColor="@color/black"
            android:paddingLeft="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp" />

            <Button
                android:id="@+id/btn_a"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/Button_Yellow"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:text="A"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:padding="0dp" />

            <Button
                android:id="@+id/btn_b"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/Button_Yellow"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="B"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:padding="0dp" />

            <Button
                android:id="@+id/btn_c"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/Button_Yellow"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="C"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:padding="0dp" />

            <Button
                android:id="@+id/btn_d"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/Button_Yellow"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="D"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:padding="0dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/button_bg"
            android:hint="Password"
            android:textColor="@color/black"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/konf_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/button_bg"
            android:hint="Konfirmasi Password"
            android:textColor="@color/black"
            android:paddingLeft="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#1E1E1E"
                android:layout_marginTop="17dp"
                android:text="Masuk"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E2DD8F"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="17dp"
                android:text="Daftar"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
