<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background_Yellow"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="9dp"
        android:background="@color/Header_Yellow">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/logo_dobos" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SD KATOLIK FRATER           DON BOSCO MANADO"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tahun Ajaran 2025/2026"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back"
            android:background="@drawable/back_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:contentDescription="btn_back">
        </ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IndoKuis"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="100dp"
            android:fontFamily="sans-serif-medium">
        </TextView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="445dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg2"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Topik"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="45dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Soal :"
                android:layout_marginBottom="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelas :"
                android:layout_marginBottom="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Durasi Tiap Soal :"
                android:layout_marginBottom="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batas Waktu Pengerjaan :"
                android:layout_marginBottom="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi :"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btn_mulai"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Mulai"
                android:layout_gravity="center"
                android:backgroundTint="#E2DD8F"
                android:textColor="#000000"
                android:layout_marginTop="70dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
