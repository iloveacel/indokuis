<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background_Yellow"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:orientation="horizontal"
      android:padding="9dp"
      android:background="@color/Header_Yellow">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:src="@drawable/logo_dobos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="SD KATOLIK FRATER           DON BOSCO MANADO"
          android:textSize="20sp"
          android:textColor="@color/black"
          android:fontFamily="sans-serif-black"
          android:gravity="center_horizontal" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Tahun Ajaran 2025/2026"
          android:textSize="14sp"
          android:textColor="@color/black"
          android:gravity="center_horizontal"
          android:fontFamily="sans-serif" />
    </LinearLayout>
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="IndoKuis"
      android:textSize="30sp"
      android:textColor="@color/black"
      android:textStyle="bold"
      android:gravity="center"
      android:fontFamily="sans-serif-medium">
  </TextView>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="12dp">
    <FrameLayout
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:background="@drawable/timer_bg"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="25dp">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="30"
          android:textSize="20sp"
          android:textAlignment="center"
          android:layout_gravity="center">
      </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_bg"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="70dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Pertanyaan 1/10"
          android:textSize="12sp"
          android:layout_gravity="center"
          android:layout_marginBottom="5dp">
      </TextView>
    </FrameLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center">
    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:text="Urutkan keempat kalimat acak ini menjadi satu paragraf yang benar : "
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp">
    </TextView>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/abox_bg"
        android:layout_gravity="center">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="A."
          android:textSize="17sp"
          android:fontFamily="sans-serif-medium"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="21dp">
      </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/abox_bg"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="B."
          android:textSize="17sp"
          android:fontFamily="sans-serif-medium"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="21dp">
      </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/abox_bg"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="C."
          android:textSize="17sp"
          android:fontFamily="sans-serif-medium"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="21dp">
      </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/abox_bg"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="D."
          android:textSize="17sp"
          android:fontFamily="sans-serif-medium"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="21dp">
      </TextView>
    </FrameLayout>
    <Button
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:text="Selanjutnya"
        android:textColor="#FFFFFF">
    </Button>
  </LinearLayout>
</LinearLayout>